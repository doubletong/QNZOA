@if (OrderBy == HeaderName)
{
    var om = OrderMode == "ace" ? "desc" : "ace";
    <a href="javascript:void(0);" @onclick="@(async ()=> await OnClick.InvokeAsync(HeaderName + "|"+om))">
        @HeaderText
        @if (OrderMode == "desc")
        {
            <i class="iconfont icon-order-down"></i>
        }
        else if (OrderMode == "ace")
        {
            <i class="iconfont icon-order-up"></i>
        }
        else
        {
            <i class="iconfont icon-orderby"></i>
        }

    </a>
}
else
{
<a href="javascript:void(0);" @onclick="@(async ()=> await OnClick.InvokeAsync(HeaderName + "|ace"))"> @HeaderText<i class="iconfont icon-orderby"></i></a>
}

@code {
    [Parameter]
    public string HeaderText { get; set; }
    [Parameter]
    public string HeaderName { get; set; }
    [Parameter]
    public string OrderBy { get; set; }
    [Parameter]
    public string OrderMode { get; set; }
    [Parameter]
    public EventCallback<string> OnClick { get; set; }
}
